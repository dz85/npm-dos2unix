    "wasmagic": "^0.0.28"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@types/node": "^18.15.11",
    "eslint": "^8.37.0",
    "shx": "^0.3.3",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3"
  }
