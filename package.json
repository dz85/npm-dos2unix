{
  "name": "dos2unix.js",
  "type": "module",
  "version": "0.0.4",
  "description": "A dos2UniX-like command-line tool written in Nodejs",
  "author": "David Z.",
  "license": "MIT",
  "homepage": "https://github.com/dz85/npm-dos2unix",
  "repository": "dz85/npm-dos2unix",
  "bugs": "https://github.com/dz85/npm-dos2unix/issues",
  "keywords": [
    "dos2unix"
  ],
  "bin": {
    "dos2unix": "./bin/run.js"
  },
